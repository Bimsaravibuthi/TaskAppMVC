@model List<TaskModel>
@{
    ViewData["Title"] = "Task Dashboard";
}

<style>
    .leftpanel-ul {
        list-style-type: none;
        padding-left: 5px;
        padding-top: 5px;
    }

    .leftpanel-ul li {
        text-align: center;
        color: gray;
        font-size: x-large;
        padding: 10px 10px;
        border-bottom: 2px solid #ddd;
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        border-radius: 10px;
    }

    .leftpanel-ul li:hover {
        background-color: #5cb85c;
        color: white;
    }

    .card {
        border-bottom: 2px solid #ddd;
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        border-radius: 10px;
        margin-top: 5px;
        margin-right: 5px;
        height: 200px;
    }

    .form-group span {
        font-size: large;
        font-weight: 400;
        color: rgb(114, 111, 111);
        margin-top: 15px;
    }

    .form-group label {
        font-size: larger;
        font-weight: 500;
        color: rgb(114, 111, 111);
        margin-top: 15px;
    }

    .scrollable-content {
        height: 100%;
        overflow: auto;
    }

    textarea {
        width: 92%;
        height: 70%;
        padding: 5px 10px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 5px;
        background-color: #f8f8f8;
        font-size: 14px;
        resize: none;
        margin-left: 20px;
    }
</style>

<div class="row">
    <div class="col-md-3" style="border-right: 1px solid #ddd; height: 80vh;">
        <ul class="leftpanel-ul">
            <li>Not Claimed</li>
            <li>Claimed</li>
            <li>Claimed By Me</li>
        </ul>
    </div>
    <div class="col-md-9" style="height: 80vh;">
        <div class="scrollable-content">
            <div class="container">
                @foreach (var item in Model)
                {
                    <div class="row" style="margin-bottom: 10px; border: 1px solid #ddd; border-bottom: 2px solid #ddd; border-radius: 10px; padding-bottom: 15px; ">
                        <div class="col-3">
                            <div class="form-group">
                                <label for="cmpnyID">Company ID :</label>
                                <span id="cmpnyID">@item.TSK_COMID</span>
                            </div>
                            <div class="form-group">
                                <label for="taskID">Task ID :</label>
                                <span id="taskID">@item.TSK_ID</span>
                            </div>
                            <div class="form-group">
                                <label for="stDate">Start Date :</label>
                                <span id="stDate">@item.TSK_STDATE.ToString().Substring(0, 10)</span>
                            </div>
                            <div class="form-group">
                                <label for="endDate">End Date :</label>
                                <span id="endDate">@item.TSK_ENDATE.ToString().Substring(0, 10)</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="container">
                                <div class="form-group">
                                    <label for="tskDisc">Discription :</label>
                                </div>
                            </div>
                            <textarea readonly>@item.TSK_DESC</textarea>
                        </div>
                        <div class="col-3">
                            <div class="container">
                                <div class="form-group">
                                    <label for="priority">Priority :</label>
                                    <span id="priority">@item.TSK_PRIORITY</span>
                                </div>
                                <div class="form-group">
                                    <label for="supFile">Sup. File :</label>
                                    <span id="supFile">File</span>
                                </div>
                                <div class="form-group" style="padding-top:40px;">
                                    <button type="button" style="bottom:0;width:100%;" class="btn btn-success">Claim Task</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }                    
            </div>
        </div>
    </div>
</div>