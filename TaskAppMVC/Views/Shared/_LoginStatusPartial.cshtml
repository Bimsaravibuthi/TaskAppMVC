@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-controller="User" asp-action="Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{ 
    <a class="btn btn-link" asp-controller="User" asp-action="Login">Login</a>
}